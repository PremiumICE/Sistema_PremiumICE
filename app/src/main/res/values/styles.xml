<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_pi</item>
        <item name="colorPrimaryDark">@color/deseleccionado</item>
        <item name="colorAccent">@color/cardview_shadow_start_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="fondoTransparente" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/seleccionado</item>
        <item name="android:textColorSecondary">@color/deseleccionado</item>
    </style>
    <style name="customDialog" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/blue_pi</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="table_header" parent="@android:style/TextAppearance.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">11sp</item>
        <item name="android:background">@color/blue_pi</item>
        <item name="android:layout_marginRight">1sp</item>
        <item name="android:layout_marginEnd">1sp</item>
        <item name="android:paddingStart">10sp</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40sp</item>
    </style>

    <style name="table_row_item" parent="@android:style/TextAppearance.Small">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginRight">1sp</item>
        <item name="android:layout_marginEnd">1sp</item>
        <item name="android:paddingStart">10sp</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:layout_height">30sp</item>
    </style>

    <string-array name="Clientes">
        <item>Seleccione Cliente:</item>
        <item>Cliente 1</item>
        <item>Cliente 2</item>
        <item>Cliente 3</item>
        <item>Cliente 4</item>
    </string-array>
    <string-array name="Productos">
        <item>Seleccione Producto:</item>
        <item>Producto 1</item>
        <item>Producto 2</item>
        <item>Producto 3</item>
        <item>Producto 4</item>
    </string-array>
    <style name="Animation.Design.TopSheetDialog" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/top_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/top_sheet_slide_out</item>
    </style>

    <style name="Widget.Design.TopSheet.Modal" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:elevation">@dimen/top_sheet_modal_elevation</item>
        <item name="behavior_peekHeight">@dimen/top_sheet_modal_peek_height</item>
        <item name="behavior_hideable">true</item>
    </style>

</resources>
